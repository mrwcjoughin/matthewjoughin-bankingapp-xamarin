<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="matthewjoughin.bankingapp.xamarin.NewBeneficiaryPage" 
    Title="New Beneficiary">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Clicked="Save_Clicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="5" Padding="5">
			<Label Text="Name" FontSize="Small" />
			<Entry Text="{Binding Beneficiary.Name}" FontSize="Small" />
            
			<Label Text="Bank" FontSize="Small" />
			<Entry Text="{Binding Beneficiary.Bank}" FontSize="Small" Margin="0" />

            <Label Text="Account Type" FontSize="Small" />
            <Entry Text="{Binding Beneficiary.AccountType}" FontSize="Small" Margin="0" />

            <Label Text="Account No" FontSize="Small" />
            <Entry Text="{Binding Beneficiary.AccountNo}" FontSize="Small" Margin="0" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>